---
apiVersion: v1
kind: ConfigMap
metadata:
  name: jasmin-config
data:
  DJANGO_SETTINGS_MODULE: "config.settings.pro"
  SYSCTL_HEALTH_CHECK: "False"
  DEBUG: "True"
  TELNET_HOST: "jasmin-cli"
  TELNET_PORT: "8990"
  TELNET_USERNAME: "jcliadmin"
  TELNET_PW: "jclipwd"
  TELNET_TIMEOUT: "10"

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jasmin-web-panel-deployment
  labels:
    app: jasmin-web-panel
spec:
  replicas: 2
  selector:
    matchLabels:
      app: jasmin-web-panel
  template:
    metadata:
      labels:
        app: jasmin-web-panel
    spec:
      containers:
      - name: jasmin-web-panel
        image: amarques939/jasmin_web_panel:4.0
        envFrom:
        - configMapRef:
            name: jasmin-config
        env:
        - name: PGUSER
          valueFrom:
            secretKeyRef:
              name: cluster1-pguser-cluster1
              key: user
        - name: PGPASSWORD
          valueFrom:
            secretKeyRef:
              name: cluster1-pguser-cluster1
              key: password
        - name: PRODB_URL
          value: "postgresql://$(PGUSER):$(PGPASSWORD)@cluster1-ha:5432/jasmin_db"
        ports:
        - containerPort: 8000
        lifecycle:
          postStart:
            exec:
              command: ["sh", "-c", "cp -r /app/public/static /app/main"]
      volumes:
      - name: static-volume
        emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: jasmin-web-panel-service
spec:
  type: NodePort
  selector:
    app: jasmin-web-panel
  ports:
    - protocol: TCP
      port: 8000
      targetPort: 8000
      nodePort: 30007
